<% content_for :name, "Gary Bunofsky" %>
<% content_for :job_title, "Designer & Developer" %>
<title><% if !(current_page?(root_url)) %><%= yield(:page_title) %> | <% end %><%= yield(:name) %>, <%= yield(:job_title) %></title>
<meta property="og:title" content="<%= yield(:name) %>, <%= yield(:job_title) %>" />
<meta property="og:description" content="<%= yield(:page_description) %>" />
<meta property="og:type" content="website" />
<meta property="og:url" content="<%= request.url %>" />
<meta property="og:image" content="<%= image_path("meta_image.png") %>" />
<meta property="og:image:secure_url" content="https://garybunofsky.com<%= image_path("meta_image.png") %>" />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="1200" />

<!-- seo -->
<meta name="author" content="<%= yield(:name) %>">
<meta name="description" content="<%= yield(:page_description) %>">
<meta name="viewport" content="width=device-width,initial-scale=1.0">

<!-- twitter card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="garybunofsky.com" />
<meta name="twitter:creator" content="@garybunofsky" />
<meta name="twitter:title" content="<%= yield(:page_title) %>" />
<meta name="twitter:description" content="<%= yield(:page_description) %>" />
<meta name="twitter:image" content="https://garybunofsky.com<%= image_path("meta_image.png") %>" />
