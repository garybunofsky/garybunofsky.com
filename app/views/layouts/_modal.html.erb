<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="text-sm-left">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <img src="https://s3.amazonaws.com/garybunofsky.com/close.svg" />
        </button>
      </div>
      <div class="modal-body">
        <ul>
          <li>
            <%= link_to "About", static_path(:about), :class => (current_page?(static_path(:about)) ? "active" : "") %>
          </li>
          <li>
            <%= link_to "Blog", static_path(:blog), :class => (current_page?(static_path(:blog)) ? "active" : "") %>
          </li>
          <li>
            <%= link_to "Portfolio", static_path(:portfolio), :class => (current_page?(static_path(:portfolio)) ? "active" : "") %>
          </li>
          <li>
            <%= link_to "Résumé", "/resume.pdf", :target => "blank" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>